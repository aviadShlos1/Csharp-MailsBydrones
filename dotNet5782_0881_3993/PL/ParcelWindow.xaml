<Window x:Class="PL.ParcelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="ParcelWindow" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="myButtonStyle"   TargetType="Button">
            <Setter Property="FontSize"
              Value="14" />
            <Setter Property="Background"
              Value="LightBlue" />
            <Setter Property="FontFamily"
              Value="Britannic Bold" />
            <Setter Property="FontWeight"
              Value="Bold" />
            <Setter Property="Foreground"
              Value="White" />
        </Style>
    </Window.Resources>


    <Grid>
        <Grid x:Name="AddOption" Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="51*"/>
                <ColumnDefinition Width="730*"/>
            </Grid.ColumnDefinitions>


            <TextBlock Name="IdTbl" Margin="25,82,674,0" Text="Sender Id:" FontSize="16" Foreground="OrangeRed" TextWrapping="Wrap" VerticalAlignment="Top" Width="auto" Grid.Column="1" FontWeight="DemiBold" TextTrimming="WordEllipsis" FontStyle="Normal" FontStretch="UltraCondensed" Cursor="AppStarting" FontFamily="Bernard MT Condensed" Height="auto" Grid.ColumnSpan="2"/>
            <TextBlock HorizontalAlignment="Left" Margin="25,129,0,0" Text="Target Id:" FontSize="16" Foreground="OrangeRed" TextWrapping="Wrap" VerticalAlignment="Top" Width="auto" Grid.Column="1" FontWeight="DemiBold" TextTrimming="WordEllipsis" FontStyle="Normal" FontStretch="UltraCondensed" Cursor="AppStarting" FontFamily="Bernard MT Condensed" Height="auto" RenderTransformOrigin="0.034,0.697" Grid.ColumnSpan="2"/>
            <TextBlock HorizontalAlignment="Left" Margin="25,184,0,0" Text="Weight:" FontSize="16" Foreground="OrangeRed" TextWrapping="Wrap" VerticalAlignment="Top" Width="auto" Grid.Column="1" FontWeight="DemiBold" TextTrimming="WordEllipsis" FontStyle="Normal" FontStretch="UltraCondensed" Cursor="AppStarting" FontFamily="Bernard MT Condensed" Height="auto" Grid.ColumnSpan="2"/>
            <TextBlock HorizontalAlignment="Left" Margin="25,245,0,0" Text="Priority:" FontSize="16" Foreground="OrangeRed" TextWrapping="Wrap" VerticalAlignment="Top" Width="auto" Grid.Column="1" FontWeight="DemiBold" TextTrimming="WordEllipsis" FontStyle="Normal" FontStretch="UltraCondensed" Cursor="AppStarting" FontFamily="Bernard MT Condensed" Height="auto" Grid.ColumnSpan="2"/>

            <ComboBox Name="SenderIdTbx" Grid.Column="2" HorizontalAlignment="Left" Margin="69,82,0,0" Text="" VerticalAlignment="Top" Width="120" SelectionChanged="SenderIdTbx_SelectionChanged"/>
            <ComboBox Name="TargetIdTbx" Grid.Column="2" HorizontalAlignment="Left" Margin="69,129,0,0" Text="" VerticalAlignment="Top" Width="120" SelectionChanged="TargetIdTbx_SelectionChanged"/>
            <ComboBox Name="WeightTbx" Grid.Column="2" HorizontalAlignment="Left" Margin="69,184,0,0" Text=""  VerticalAlignment="Top" Width="120"  SelectionChanged="WeightTbx_SelectionChanged"/>
            <ComboBox Name="PriorityTbx" Grid.Column="2" HorizontalAlignment="Left" Margin="69,244,0,0" Text="" VerticalAlignment="Top" Width="120" SelectionChanged="PriorityTbx_SelectionChanged"/>

            <Button Content="Close" Style="{StaticResource myButtonStyle}" Grid.Column="1" HorizontalAlignment="Left" Margin="25,370,0,0" VerticalAlignment="Top" Height="32" Width="64" Grid.ColumnSpan="2" Click="CloseButton_Click"/>
            <Button Content="Add"  Style="{StaticResource myButtonStyle}" Grid.Column="2" HorizontalAlignment="Left" Margin="601,371,0,0" VerticalAlignment="Top" Height="31" Width="62" Click="AddButton_Click"/>
        </Grid>

