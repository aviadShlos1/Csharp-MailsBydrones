<Window x:Class="PL.ParcelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="ParcelWindow" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="myButtonStyle"   TargetType="Button">
            <Setter Property="FontSize"
              Value="14" />
            <Setter Property="Background"
              Value="LightBlue" />
            <Setter Property="FontFamily"
              Value="Britannic Bold" />
            <Setter Property="FontWeight"
              Value="Bold" />
            <Setter Property="Foreground"
              Value="White" />
        </Style>
    </Window.Resources>


    <Grid>
        <Grid x:Name="AddOption" Visibility="Hidden">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="51*"/>
                <ColumnDefinition Width="730*"/>
            </Grid.ColumnDefinitions>


            <TextBlock Name="IdTbl" Margin="25,82,674,0" Text="Sender Id:" FontSize="16" Foreground="OrangeRed" TextWrapping="Wrap" VerticalAlignment="Top" Width="auto" Grid.Column="1" FontWeight="DemiBold" TextTrimming="WordEllipsis" FontStyle="Normal" FontStretch="UltraCondensed" Cursor="AppStarting" FontFamily="Bernard MT Condensed" Height="auto" Grid.ColumnSpan="2"/>
            <TextBlock HorizontalAlignment="Left" Margin="25,129,0,0" Text="Target Id:" FontSize="16" Foreground="OrangeRed" TextWrapping="Wrap" VerticalAlignment="Top" Width="auto" Grid.Column="1" FontWeight="DemiBold" TextTrimming="WordEllipsis" FontStyle="Normal" FontStretch="UltraCondensed" Cursor="AppStarting" FontFamily="Bernard MT Condensed" Height="auto" RenderTransformOrigin="0.034,0.697" Grid.ColumnSpan="2"/>
            <TextBlock HorizontalAlignment="Left" Margin="25,184,0,0" Text="Weight:" FontSize="16" Foreground="OrangeRed" TextWrapping="Wrap" VerticalAlignment="Top" Width="auto" Grid.Column="1" FontWeight="DemiBold" TextTrimming="WordEllipsis" FontStyle="Normal" FontStretch="UltraCondensed" Cursor="AppStarting" FontFamily="Bernard MT Condensed" Height="auto" Grid.ColumnSpan="2"/>
            <TextBlock HorizontalAlignment="Left" Margin="25,245,0,0" Text="Priority:" FontSize="16" Foreground="OrangeRed" TextWrapping="Wrap" VerticalAlignment="Top" Width="auto" Grid.Column="1" FontWeight="DemiBold" TextTrimming="WordEllipsis" FontStyle="Normal" FontStretch="UltraCondensed" Cursor="AppStarting" FontFamily="Bernard MT Condensed" Height="auto" Grid.ColumnSpan="2"/>

            <ComboBox Name="SenderIdTbx" Grid.Column="2" HorizontalAlignment="Left" Margin="69,82,0,0" Text="" VerticalAlignment="Top" Width="120" />
            <ComboBox Name="TargetIdTbx" Grid.Column="2" HorizontalAlignment="Left" Margin="69,129,0,0" Text="" VerticalAlignment="Top" Width="120" />
            <ComboBox Name="WeightTbx" Grid.Column="2" HorizontalAlignment="Left" Margin="69,184,0,0" Text=""  VerticalAlignment="Top" Width="120"  />
            <ComboBox Name="PriorityTbx" Grid.Column="2" HorizontalAlignment="Left" Margin="69,244,0,0" Text="" VerticalAlignment="Top" Width="120" />

            <Button Content="Close" Style="{StaticResource myButtonStyle}" Grid.Column="1" HorizontalAlignment="Left" Margin="25,370,0,0" VerticalAlignment="Top" Height="32" Width="64" Grid.ColumnSpan="2" Click="CloseButton_Click"/>
            <Button Content="Add"  Style="{StaticResource myButtonStyle}" Grid.Column="2" HorizontalAlignment="Left" Margin="601,371,0,0" VerticalAlignment="Top" Height="31" Width="62" Click="AddButton_Click"/>
        </Grid>

        <Grid x:Name="UpdateOptions" Visibility="Hidden">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="9*"/>
                <ColumnDefinition Width="41*"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="ParcelIdTbx" BorderThickness="0"  Background="LightBlue" Grid.Column="1" HorizontalAlignment="Left" Margin="79,60,0,0" Text="{Binding Path= ParcelId}" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" IsReadOnly="True" Height="19"/>
            <TextBox x:Name="SenderTbx" BorderThickness="1" Background="LightBlue"  Grid.Column="1" HorizontalAlignment="Left" Margin="79,91,0,0" Text="" VerticalAlignment="Top" Width="100"  IsEnabled="True" />
            <TextBox x:Name="RecieverTbx" BorderThickness="1"  Background="LightBlue" Grid.Column="1" HorizontalAlignment="Left" Margin="79,129,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" IsEnabled="True" MaxLength="10"/>
            <TextBox x:Name="DroneAssignTbx" BorderThickness="0" Background="LightBlue"  Grid.Column="1" HorizontalAlignment="Left" Margin="79,249,0,0" Text="" VerticalAlignment="Top" Width="100"  IsReadOnly="True" />
            <TextBox x:Name="WightTbx" BorderThickness="0"  Background="LightBlue" Grid.Column="1" HorizontalAlignment="Left" Margin="79,164,0,0" Text="{Binding Path=Weight}" VerticalAlignment="Top" Width="100"  IsReadOnly="True" Height="23" />
            <TextBox x:Name="Priority" BorderThickness="0"  Background="LightBlue" Grid.Column="1" HorizontalAlignment="Left" Margin="79,0,0,0" Text="{Binding Path=Priority}" VerticalAlignment="Center" Width="100"  IsReadOnly="True" />
            <TextBox x:Name="CreateTbx" BorderThickness="0" Background="LightBlue" Grid.Column="1" HorizontalAlignment="Left" Margin="561,55,0,0" Text="{Binding Path= CreatingTime}" VerticalAlignment="Top" Width="66"  IsReadOnly="True" Height="14" />
            <TextBox x:Name="AssignTbx" BorderThickness="0"  Background="LightBlue" Grid.Column="1" HorizontalAlignment="Left" Margin="561,100,0,0" Text="{Binding Path=AssignningTime}" VerticalAlignment="Top" Width="66"  IsReadOnly="True" Height="14" />
            <TextBox x:Name="PickTbx" BorderThickness="0"  Background="LightBlue" Grid.Column="1" HorizontalAlignment="Left" Margin="561,138,0,0" Text="{Binding Path= PickingUpTime}" VerticalAlignment="Top" Width="66"  IsReadOnly="True" Height="14" />
            <TextBox x:Name="SupplyTbx" BorderThickness="0"  Background="LightBlue" Grid.Column="1" HorizontalAlignment="Left" Margin="561,173,0,0" Text="{Binding Path= SupplyingTime}" VerticalAlignment="Top" Width="66"  IsReadOnly="True" Height="14" />


            <TextBlock Margin="76,60,573,0" Text="Id:" FontSize="14" TextWrapping="Wrap" VerticalAlignment="Top" Visibility="Visible" Grid.ColumnSpan="2" />
            <TextBlock HorizontalAlignment="Left" Margin="76,90,0,0" Text="Sender:" FontSize="14" TextWrapping="Wrap" VerticalAlignment="Top" Width="auto" Grid.ColumnSpan="2"/>
            <TextBlock Name="PhoneTbl" HorizontalAlignment="Left" Margin="76,128,0,0" Text="Reciever:" FontSize="14" TextWrapping="Wrap" VerticalAlignment="Top" Width="auto" Grid.ColumnSpan="2"/>
            <TextBlock HorizontalAlignment="Left" Margin="75,169,0,0" Text="Weight:" FontSize="14" TextWrapping="Wrap" VerticalAlignment="Top" Width="auto"/>
            <TextBlock HorizontalAlignment="Left" Margin="76,0,0,0" Text="Priority:" FontSize="14" TextWrapping="Wrap" VerticalAlignment="Center" Width="auto" Visibility="Visible" Grid.ColumnSpan="2"/>
            <TextBlock HorizontalAlignment="Left" Margin="76,246,0,0" Text="Drone Assigned:" FontSize="14" TextWrapping="Wrap" VerticalAlignment="Top" Width="auto" Visibility="Visible" Grid.ColumnSpan="2"/>
            <TextBlock HorizontalAlignment="Left" Margin="494,0,0,340" Text="Creating:" VerticalAlignment="Bottom" Width="auto" Height="39" Grid.Column="1"/>
            <TextBlock HorizontalAlignment="Left" Margin="494,0,0,303"  VerticalAlignment="Bottom" Width="auto" Height="35" Text="Assignning:" Grid.Column="1"/>
            <TextBlock HorizontalAlignment="Left" Margin="494,0,0,265"  VerticalAlignment="Bottom" Width="auto" Height="35" Text="Picking Up:" Grid.Column="1"/>
            <TextBlock Margin="494,0,77,230"  VerticalAlignment="Bottom" Width="auto" Height="35" Text="Supplying:" Grid.Column="1"/>

            
            <Button x:Name="DeleteParcelButton" Style="{StaticResource myButtonStyle}" Content="Delete" Margin="461,364,81,23" Click="DeleteParcelButton_Click" Visibility="Visible" Grid.Column="1"/>
            <Button Content="Close" Style="{StaticResource myButtonStyle}" HorizontalAlignment="Left" Margin="25,384,0,0" VerticalAlignment="Top" Height="27" Width="53" Click="CloseButton" />

        </Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images\addParcel.jpg" />
        </Grid.Background>
    </Grid>
</Window>
