<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="640" Width="800">
    <!--giving background to the main window -->
    <Grid >
        <Grid.Background>
            <ImageBrush ImageSource="Images\Drone.jpg"/>
        </Grid.Background>
        <Button Content="Drones" HorizontalAlignment="Center" Margin="0,529,0,0" VerticalAlignment="Top" Click="ShowDronesButton_Click" Height="50" Width="108" RenderTransformOrigin="0.456,1.266" Background="#FF9FD8DD" FontWeight="Bold" FontFamily="Yu Gothic UI Semibold"/>
        <Button Content="Base Stations" HorizontalAlignment="Center" Margin="400,529,0,0" VerticalAlignment="Top" Click="ShowBaseStationButton_Click" Height="50" Width="108" RenderTransformOrigin="0.456,1.266" Background="#FF9FD8DD" FontWeight="Bold" FontFamily="Yu Gothic UI Semibold"/>
    </Grid>

</Window>
