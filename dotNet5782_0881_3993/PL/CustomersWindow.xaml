<Window x:Class="PL.CustomersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="CustomersWindow" Height="450" Width="800">
    <Grid>
        <ListView x:Name="CustomersListView" MouseDoubleClick="CustomersListView_MouseDoubleClick" Grid.Row="1" Margin="0,5,0,-5" Background="AliceBlue" >
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Content="Add new customer" HorizontalAlignment="Left" Margin="652,318,0,0" Grid.Row="1" VerticalAlignment="Top" Height="32" Width="112" Click="AddCustomerButton_Click"/>
        <Button Content="Close" HorizontalAlignment="Left" Margin="39,318,0,0" Grid.Row="1" VerticalAlignment="Top" Height="32" Width="109" Click="ClosingWindowButton_Click"/>
        

    </Grid>
</Window>
